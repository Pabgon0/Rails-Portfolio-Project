<h1>All Games</h1>
<%= form_tag('/games',:method=>:get) do %>                          
<%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name", params[:category_id]), include_blank: 'Select One' %>    
<%= submit_tag %>
<% end %>

<% @games.each do |g| %>
  <h2><%= link_to g.name, game_path(g.id)%> - <%= g.category.name %> - <%= g.price %></h2>
  <%= link_to "Write a review", new_game_review_path(g.id) %> 
<% end %>